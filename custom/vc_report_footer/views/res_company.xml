<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="form_view_company_with_sales_conditions" model="ir.ui.view">
        <field name="name">Company form with sales conditions</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Report footer">
                    <group>
                        <field name="sales_conditions"></field>
                        <field name="company_info_footer"></field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
